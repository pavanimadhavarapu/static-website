pipeline {
    agent any
    environment {
        REGISTRY = "docker.io"
        DOCKERHUB_NAMESPACE = "pavanimadhavarapu"
        IMAGE_NAME = "${DOCKERHUB_NAMESPACE}/static-website"
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CRED = "dockerhub-cred"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pavanimadhavarapu/static-website.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CRED}", usernameVariable: "DOCKER_USER", passwordVariable: "DOCKER_PASS")]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Deploy to Swarm') {
            steps {
                sh '''
                docker swarm init || true
                if docker service ls | grep static-website; then
                    docker service update --image ${IMAGE_NAME}:${IMAGE_TAG} --replicas 3 static-website
                else
                    docker service create --name static-website --replicas 3 -p 8081:80 ${IMAGE_NAME}:${IMAGE_TAG}
                fi
                '''
            }
        }
    }
}

