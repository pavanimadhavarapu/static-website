pipeline {
    agent any
    environment {
        REGISTRY = "docker.io"
        DOCKERHUB_NAMESPACE = "pavanimadhavarapu"
        IMAGE_NAME = "${DOCKERHUB_NAMESPACE}/static-website"
        IMAGE_TAG = "${BUILD_NUMBER}"
        DOCKERHUB_CRED = "dockerhub-cred"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/pavanimadhavarapu/static-website.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CRED}", usernameVariable: "DOCKER_USER", passwordVariable: "DOCKER_PASS")]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Deploy to Swarm') {
    steps {
        sh '''
        # Initialize swarm if not already
        docker swarm init || true

        # Check if service exists
        if docker service ls | grep webservice; then
            echo "ðŸ”„ Updating existing service..."
            docker service update --image pavanimadhavarapu/static-website:${BUILD_NUMBER} --replicas 3 webservice
        else
            echo "ðŸš€ Creating new service..."
            docker service create \
                --name webservice \
                --publish 8081:80 \
                --replicas 3 \
                pavanimadhavarapu/static-website:${BUILD_NUMBER}
        fi
        '''
    }
}


    }
}

